{
  "extends": "@sysuke/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["dom", "ES2015"],
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2020"
  },
  "include": [
    "client/**/*.ts",
    "server/**/*.ts",
    "shared/**/*.ts",
    "tsup.config.ts",
    "vitest.client.config.ts",
    "vitest.node.config.ts"
  ],
  "exclude": ["node_modules", "dist", "**/dist/**/*"]
}
